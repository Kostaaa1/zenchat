{
  "version": 2,
  "builds": [
    {
      "src": "packages/server/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "packages/client",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/trpc", "dest": "/api" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "scripts": {
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd packages/client && npm start"
  }
}
